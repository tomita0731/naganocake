<div class="container-fluid">
  <div class="row m-5 d-block text-center">
    <%= form_with model: @customers, url: registration_path(resource_name), local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <h4 class="col-lg-3 cl-sm-3 text-dark bg-light mb-5">新規会員登録</h4>

      <div class="input-group mb-3 w-100">
        <div class="col-lg-2 col-sm-2 col-12 text-left">
          <label for="customers_name">名前</label>
        </div>
        <div class="col-lg-2  col-sm-2 col-12 text-left">
          <label for="user_last_name">(姓)</label>
        </div>
        <div class="col-lg-3 col-sm-3 col-12">
          <%= f.text_field :last_name, class: "form-control mb-1 mx-0", placeholder: "令和" %>
        </div>
        <div class="col-lg-2 col-sm-2 col-12 text-left">
          <label for="user_first_name">(名)</label>
        </div>
        <div class="col-lg-3 col-sm-3 col-12">
          <%= f.text_field :first_name, class: "form-control mb-1 mx-0", placeholder: "道子" %>
        </div>
      </div>

      <div class="input-group mb-3 w-100">
        <div class="col-lg-2 col-sm-2 col-12 text-left">
          <label for="customers_name_kana">フリガナ</label>
        </div>
        <div class="col-lg-2 col-sm-2 col-12 text-left">
          <label for="user_last_name">(セイ)</label>
        </div>
        <div class="col-lg-3 col-sm-3 col-12">
          <%= f.text_field :last_name_kana, class: "form-control mb-1 mx-0", placeholder: "レイワ" %>
        </div>
        <div class="col-lg-2 col-sm-2 col-12 text-left">
          <label for="user_first_name">(メイ)</label>
        </div>
        <div class="col-lg-3 col-sm-3 col-12">
          <%= f.text_field :first_name_kana, class: "form-control mb-1 mx-0", placeholder: "ミチコ" %>
        </div>
      </div>

      <div class="input-group mb-3 w-100">
        <div class="col-lg-2 col-m-2 col-12 text-left">
          <label for="customers_email">メールアドレス</label>
        </div>
        <div class="col-lg-10 col-sm-10 col-12">
          <%= f.email_field :email, class: "form-control mb-1 mx-0", placeholder: "sample@example.com" %>
        </div>
      </div>

      <div class="input-group mb-3 w-100">
        <div class="col-lg-2 col-sm-2 col-12 text-left">
          <label for="customers_podtal_code">郵便番号（ハイフンなし）</label>
        </div>
        <div class="col-lg-10 col-sm-10 col-12">
          <%= f.number_field :podtal_code, class: "form-control mb-1 mx-0", placeholder: "0000000000" %>
        </div>
      </div>

      <div class="input-group mb-3 w-100">
        <div class="col-lg-2 col-sm-2 col-12 text-left">
          <label for="customers_address">住所</label>
        </div>
        <div class="col-lg-10 col-sm-10 col-12">
          <%= f.text_field :address, class: "form-control mb-1 mx-0", placeholder: "東京都渋谷区代々木神園町0-0", size: 50 %>
        </div>
      </div>

      <div class="input-group mb-3 w-100">
        <div class="col-lg-2 col-sm-2 col-12 text-left">
          <label for="customers_telephone_number">電話番号（ハイフンなし）</label>
        </div>
        <div class="col-lg-10 col-sm-10 col-12">
          <%= f.number_field :telephone_number, class: "form-control mb-1 mx-0", placeholder: "00000000000" %>
        </div>
      </div>

      <div class="input-group mb-3 w-100">
        <div class="col-lg-2 col-sm-2 col-12 text-left">
          <label for="customers_encrypted_password">パスワード（６文字以上）</label>
        </div>
        <div class="col-lg-10 col-sm-10 col-12">
          <%= f.password_field :encrypted_password, class: "form-control mb-1 mx-0" %>
        </div>
      </div>

      <div class="input-group mb-3 w-100">
        <div class="col-lg-2 col-sm-2 col-12 text-left">
          <label for="encrypted_password_confirmation">パスワード（確認用）</label>
        </div>
        <div class="col-lg-10 col-sm-10 col-12">
          <%= f.password_field :encrypted_password_confirmation, class: "form-control mb-1 mx-0" %>
        </div>
      </div>

      <div class="action">
        <%= f.submit "新規登録", class: "d-grid gap-2 col-6 mx-auto btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>

<div class="container-fluid">
  <div class="row m-5 d-block">
    <h4 class="col-lg-3 cl-sm-3 text-dark bg-light mb-5">既に登録済みの方</h4>
      <%= link_to "こちら",new_session_path(resource_name), class: "col-3 ml-5" %>　からログインしてください。
  </div>
</div>
      